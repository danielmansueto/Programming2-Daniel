<CustomBoxLayout@BoxLayout>:
    orientation: "horizontal"
    spacing: 1

<CustomButton@Button>:
    background_normal: ""
    background_color: (0.85,0.85,0.85,1)
    color: 0,0,0,1

<OrangeButton@CustomButton>:
    background_color: 1, 0.5, 0, 1
    color: 1,1,1,1

<CalculatorLayout>:
    id: scorer
    spacing: 1
    orientation: "vertical"
    display: display
    TextInput:
        id: display
        text: ""
        background_normal: ""
        background_color: (0.5,0.5,0.5,1)
        font_size: 100
        foreground_color: 1,1,1,1
    CustomBoxLayout:
        CustomButton:
            text: "AC"
            on_press: display.text = ""
            font_size: 50
        CustomButton:
            text: "("
            on_press: display.text += self.text
        CustomButton:
            text: ")"
            on_press: display.text += self.text
        OrangeButton:
            text: "/"
            on_press: display.text += self.text
            font_size: 50
    CustomBoxLayout:
        CustomButton:
            text: "7"
            on_press: display.text += self.text
        CustomButton:
            text: "8"
            on_press: display.text += self.text
        CustomButton:
            text: "9"
            on_press: display.text += self.text
        OrangeButton:
            text: "*"
            on_press: display.text += self.text
            font_size: 50
    CustomBoxLayout:
        CustomButton:
            text: "4"
            on_press: display.text += self.text
        CustomButton:
            text: "5"
            on_press: display.text += self.text
        CustomButton:
            text: "6"
            on_press: display.text += self.text
        OrangeButton:
            text: "-"
            on_press: display.text += self.text
            font_size: 75
    CustomBoxLayout:
        CustomButton:
            text: "1"
            on_press: display.text += self.text
        CustomButton:
            text: "2"
            on_press: display.text += self.text
        CustomButton:
            text: "3"
            on_press: display.text += self.text
        OrangeButton:
            text: "+"
            on_press: display.text += self.text
            font_size: 50
    CustomBoxLayout:
        CustomButton:
            text: "0"
            size_hint_x: 2
            on_press: display.text += self.text
        CustomButton:
            text: "."
            on_press: display.text += self.text
            font_size: 50
        OrangeButton:
            text: "="
            on_press: root.calculate()
            font_size: 50